<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder_receipt_listing"
    tools:context=".SelectIngredient">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="Selecionar\ningredientes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/customborder_receipt_listing"
                android:fontFamily="@font/lato"
                android:text="Frutas e Vegetais"
                ></TextView>

            <CheckBox
                android:id="@+id/checkBoxAlface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Alface" />

            <CheckBox
                android:id="@+id/checkBoxBanana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Banana" />

            <CheckBox
                android:id="@+id/checkBoxCouve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Couve" />

            <CheckBox
                android:id="@+id/checkBoxLaranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Laranja" />

            <CheckBox
                android:id="@+id/checkBoxMaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="MaÃ§a" />

            <CheckBox
                android:id="@+id/checkBoxTomate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Tomate" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/customborder_receipt_listing"
                android:fontFamily="@font/lato"
                android:text="Carne"
                ></TextView>

            <CheckBox
                android:id="@+id/checkBoxFrango"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Frango" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/customborder_receipt_listing"
                android:fontFamily="@font/lato"
                android:text="Peixe"
                ></TextView>

            <CheckBox
                android:id="@+id/checkBoxBacalhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Bacalhau" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/customborder_receipt_listing"
                android:fontFamily="@font/lato"
                android:text="Outros"
                ></TextView>

            <CheckBox
                android:id="@+id/checkBoxAzeite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:buttonTint="#0EA33C"
                android:text="Azeite" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonAceitar"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#0EA33C"
        android:text="Aceitar"
        android:fontFamily="@font/lato"
        android:textColor="#f1f1f1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#FF2D00"
        android:text="Resetar"
        android:fontFamily="@font/lato"
        android:textColor="#f1f1f1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>